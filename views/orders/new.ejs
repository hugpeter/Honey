<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Place a new order</h1>
        <div style="width: 30%; margin: 40px auto;">
            <form action="/orders/addOrder" method="POST">
                    <input type="hidden" name="username" value = "<%= currentUser.username %>" >
                    <input type="hidden" name="email" value = "<%= currentUser.email %>" >
                    <input type="hidden" name="firstName" value = "<%= currentUser.firstName %>" >
                    <input type="hidden" name="lastName" value = "<%= currentUser.lastName %>" >
                <div class="form-group">
                    <label for="num2lbGlass">2lb Glass Jar ($14 each)</label>
                    <input class="form-control" type="number" id="num2lbGlass" name="num2lbGlass" placeholder="0" min="0" step="1">
                </div>
                <div class="form-group">
                    <label for="num1lbGlass">1lb Glass Jar ($7 each)</label>
                    <input class="form-control" type="number" id="num1lbGlass" name="num1lbGlass" placeholder="0" min="0" step="1">
                </div>
                <div class="form-group">
                    <label for="num1lbPlastic">1lb Plastic Jar ($7 each)</label>
                    <input class="form-control" type="number" id="num1lbPlastic" name="num1lbPlastic" placeholder="0" min="0" step="1">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>